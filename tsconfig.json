{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext", // Ensure this is NodeNext for .js extensions
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true // Needed for importing JSON files directly
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__" // THIS LINE IS CRUCIAL: Exclude your test directory
  ]
}
