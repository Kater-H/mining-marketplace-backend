{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // CHANGED: Use NodeNext for proper ESM output with .js extensions
    "moduleResolution": "NodeNext", // CHANGED: Use NodeNext for module resolution
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
